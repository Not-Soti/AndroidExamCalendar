<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayoutExamNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:minHeight="@dimen/dayCellsMinHeight"
        android:orientation="vertical"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="408dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/DayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayoutExamNames"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:text="aaaa"
        android:textSize="@dimen/dayTextSizeMonthGrid"
        tools:layout_conversion_absoluteHeight="682dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_editor_absoluteX="410dp"
        tools:layout_editor_absoluteY="48dp" />

</RelativeLayout>
